<!-- Formatting note: terminate all comments with a period, to avoid breaking
     the documentation output. To suppress comment lines from the documentation
     output, insert an eat-comment element after the comment lines.
-->

<resources>
		<!-- These are the standard attributes that make up a complete theme. -->
    <declare-styleable name="Theme">
        <!-- ============== -->
        <!-- Generic styles -->
        <!-- ============== -->
        <eat-comment />

		    <attr name="preferenceFragmentListLayout" format="reference" />
    		
	</declare-styleable>
	
    <!-- These are the standard attributes that make up a complete theme. -->
    <declare-styleable name="QsTargetImageView">
        <attr name="layout_gravity" />
    </declare-styleable>

    <declare-styleable name="QsTargetTextView">
        <attr name="layout_gravity" />
    </declare-styleable>
    
    <declare-styleable name="QsSlidingCtrlMultiWaveView">
        <attr name="gravity" />
        <attr name="qspadding" format="dimension" />
        <!-- Sets the padding, in pixels, of the left edge; see {@link android.R.attr#padding}. -->
        <attr name="qspaddingLeft" format="dimension" />
        <!-- Sets the padding, in pixels, of the top edge; see {@link android.R.attr#padding}. -->
        <attr name="qspaddingTop" format="dimension" />
        <!-- Sets the padding, in pixels, of the right edge; see {@link android.R.attr#padding}. -->
        <attr name="qspaddingRight" format="dimension" />
        <!-- Sets the padding, in pixels, of the bottom edge; see {@link android.R.attr#padding}. -->
        <attr name="qspaddingBottom" format="dimension" />
    </declare-styleable>
    
    <!-- jz add for iphone style -->
    <attr name="qsItemPlace">
        <flag name="first" value="1" />
        <flag name="last" value="2" />
    </attr>
    
    <attr name="qsExtAttrs">
    		<!-- ListView. -->
        <flag name="DisableListSelector" value="0x01" />
        <flag name="EnableFirstLastState" value="0x02" />
    </attr>
    
    <attr name="qsSummaryStyle">
        <flag name="none" value="0" />
        <flag name="bottom" value="1" />
        <flag name="right" value="2" />
    </attr>
    
    <attr name="qsIsAutoFirstAndLast"  format="boolean"/>

		<!-- jz add end -->
    
</resources>
