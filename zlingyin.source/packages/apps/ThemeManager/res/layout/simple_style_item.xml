<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customctrl="http://schemas.android.com/apk/res/com.jzs.android.systemstyle"
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">

    <com.jzs.android.systemstyle.controls.PreviewImageView android:tag="stylepreview" 
        android:layout_width="fill_parent"
		android:layout_height="180dp"
		customctrl:checkedicon="@drawable/btn_check_state_icon"
		android:scaleType="centerInside"
		/>
    
	<TextView android:tag="styletitle" 
		android:layout_width="fill_parent"
		android:layout_height="30dp" 
		android:textSize="20sp"
		android:gravity="center" 
		android:ellipsize="marquee" />

</LinearLayout>
