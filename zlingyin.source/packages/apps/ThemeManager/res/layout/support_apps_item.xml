<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customctrl="http://schemas.android.com/apk/res/com.jzs.android.systemstyle"
	android:orientation="horizontal"
	android:layout_width="fill_parent" 
	android:layout_height="105dp"
	android:padding="4dp">

    <com.jzs.android.systemstyle.controls.PreviewImageView android:tag="stylepreview" 
        android:layout_width="70dp"
		android:layout_height="105dp"
		android:layout_marginLeft="10dp"
		customctrl:checkedicon="@drawable/btn_check_state_icon"
		android:scaleType="centerInside"
		/>
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"  
        android:layout_gravity="center_vertical"
        >
        <TextView android:tag="styletitle" 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"  
		android:textSize="20sp"
		android:gravity="center_vertical" 
		android:ellipsize="marquee" 
		android:background="@drawable/list_item_title_bg"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:layout_marginLeft="10dp"
		android:minLines="2"
		android:layout_centerVertical="true"/>
    </RelativeLayout>
	

</LinearLayout>
