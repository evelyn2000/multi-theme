<!--             android:layout_marginBottom="5dip" -->
<!--            	android:orientation="horizontal" -->
<!--            	android:gravity="center" -->
<!--            	/> -->
        
        <com.jzs.android.systemstyle.controls.PageViewIndicator
			android:tag="paged_view_indicator"
			android:layout_width="fill_parent"
			android:layout_height="16dip"
			android:layout_marginTop="5dip"
			android:layout_marginBottom="5dp"
			customctrl:curScreenImage="@drawable/ic_bookmark_indicator_selected"
			customctrl:defaultScreenImage="@drawable/ic_bookmark_indicator_normal"
			customctrl:moreScreenImage="@null"
			customctrl:direction="horizontal"
			customctrl:imagePadding="3dip"
			customctrl:isCreateNumber="false"
			customctrl:textSize="12sp"
			customctrl:textColor="#000000"
			customctrl:curIconWidth="18dip"
			customctrl:curIconHeight="0dip"
			customctrl:defIconWidth="0dip"
			customctrl:defIconHeight="0dip"
			/> 
			
